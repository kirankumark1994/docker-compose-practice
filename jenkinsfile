pipeline {
    agent any
    
    environment {
        PATH = '$PATH:/usr/bin'
    }

    stages {
        stage('checkout') {
            steps {
               git 'https://github.com/kirankumark1994/docker-compose-practice.git'
            }
        }
       
        stage('up') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('ps') {
            steps {
                sh 'docker ps'
            }
        }
    }
    post {
  success {
    echo 'success'
  }
  failure {
    echo 'failure'
  }
}

}
